<h1>Edit Book</h1>

<form method="post" action="/books/{{ book._id }}?_method=PUT">
    <div>
        <label>Name</label>
    </div>
    <div>
        <input type="text" name="name" value="{{ book.name}}" />
    </div>
    <div>
        <label>Author</label>
    </div>
    <div>
         <input type="text" name="author" value="{{ book.author}}" />
    </div>
  
    <div>
        <input type="submit" value="Edit Book" />
    </div>